{
  "name": "skillx",
  "version": "0.1.3",
  "description": "CLI runner for skill scripts across .agent/.agents/.claude/.codex skill directories.",
  "repository": {
    "type": "git",
    "url": "https://github.com/erwinkn/skillx"
  },
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "skillx": "./bin/skillx.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "bun run clean && tsdown src/index.ts src/cli.ts --format esm --platform node --out-dir dist --dts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsdown": "^0.20.3",
    "typescript": "^5"
  }
}
